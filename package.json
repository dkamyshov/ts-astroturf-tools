{
  "name": "ts-astroturf-tools",
  "version": "0.10.1",
  "description": "TypeScript tools that enhance astroturf.",
  "keywords": [
    "astroturf",
    "plugin",
    "loader",
    "tools",
    "typescript",
    "vscode",
    "visual studio code"
  ],
  "main": "index.js",
  "typings": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkamyshov/ts-astroturf-tools.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf coverage lib tsconfig.tsbuildinfo",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --verbose ./src",
    "test-integration": "jest --verbose examples/tests --config=examples/tests/jest.config.js",
    "build-examples": "cd examples && cd typescript-babel && yarn && cd ../typescript-webpack && yarn && cd ../..",
    "prepare": "yarn lint && yarn build && yarn test && yarn build-examples && yarn test-integration",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src"
  },
  "dependencies": {
    "@babel/traverse": "^7.6.0",
    "@babel/types": "^7.6.1",
    "colors": "^1.4.0",
    "loader-utils": "^1.2.3",
    "lodash.get": "^4.4.2",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/jest": "^24.0.18",
    "@types/loader-utils": "^1.1.3",
    "@types/lodash.get": "^4.4.6",
    "@types/webpack": "^4.39.1",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0"
  }
}
